@model RegistrationAndLoginApp.Models.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Login";
}

<h1 class="mb-4">Login</h1>

<div class="row justify-content-center">
    <div class="col-md-5">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Hidden Id field -->
            <input asp-for="Id" type="hidden" />

            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="SelectedGroupId" class="form-label">Select Role</label>
                <select asp-for="SelectedGroupId" class="form-control" asp-items="@(new List<SelectListItem> {
                                                                                           new SelectListItem { Value = "1", Text = "Member" },
                                                                                           new SelectListItem { Value = "2", Text = "Admin" },
                                                                                           new SelectListItem { Value = "3", Text = "Developer" },
                                                                                           new SelectListItem { Value = "4", Text = "Guest" }
                                                                                       })">
                </select>
                <span asp-validation-for="SelectedGroupId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Login" class="btn btn-primary w-100" />
            </div>
        </form>

        <div class="mt-3 text-center">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
