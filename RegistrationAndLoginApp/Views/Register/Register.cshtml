@model RegistrationAndLoginApp.Models.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Register";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header text-center bg-gradient rounded-top text-white py-4" style="background: linear-gradient(45deg, #007bff, #00c6ff);">
                    <h2>Create Your Account</h2>
                    <p class="small">Join us and start your journey!</p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Username -->
                        <div class="input-group mb-3 shadow-sm rounded">
                            <span class="input-group-text bg-primary text-white"><i class="fa-solid fa-user"></i></span>
                            <input asp-for="Username" class="form-control" placeholder="Username" />
                        </div>
                        <span asp-validation-for="Username" class="text-danger mb-2 d-block"></span>

                        <!-- Password -->
                        <div class="input-group mb-3 shadow-sm rounded">
                            <span class="input-group-text bg-primary text-white"><i class="fa-solid fa-lock"></i></span>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger mb-2 d-block"></span>

                        <!-- Group Membership -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Select Group</label>
                            <div class="d-flex flex-wrap gap-3">
                                @for (int i = 0; i < Model.GroupPossibilities.Count; i++)
                                {
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio"
                                               asp-for="SelectedGroupId"
                                               value="@Model.GroupPossibilities[i].Id"
                                               id="group_@i" />
                                        <label class="form-check-label" for="group_@i">
                                            @Model.GroupPossibilities[i].Name
                                        </label>
                                    </div>
                                }
                            </div>
                            <span asp-validation-for="SelectedGroupId" class="text-danger d-block mt-1"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg shadow-lg">
                                <i class="fa-solid fa-user-plus me-2"></i> Register
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center py-3 bg-light rounded-bottom">
                    Already have an account?
                    <a asp-controller="Login" asp-action="Index" class="fw-bold text-primary">Login here</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
